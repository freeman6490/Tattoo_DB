CREATE DATABASE tattoo;
USE tattoo;
CREATE TABLE customer(name VARCHAR(30), customer_id VARCHAR(30) PRIMARY KEY, price_range INT);
CREATE TABLE artist (artist_id VARCHAR(30) PRIMARY KEY, name VARCHAR(20), specialty text, hourly_rate INT(3));
CREATE TABLE schedule(week_id INT(3) PRIMARY KEY, artist_availability VARCHAR(10), customer_availability VARCHAR(10), FOREIGN KEY (artist_availability) REFERENCES artist(artist_id), FOREIGN KEY (customer_availability) REFERENCES customer(customer_id));
CREATE INDEX artist_index ON artist(artist_id);
CREATE INDEX hourly_rate ON artist(hourly_rate);
